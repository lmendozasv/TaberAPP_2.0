<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="galvanissaapp.grupowebbox.com.galvanissaapp.MyProfileActivity"
    android:background="@drawable/bg_profile"
    tools:showIn="@layout/app_bar_my_profile">





        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/button3"
            android:background="@drawable/circle_profile"
            android:layout_alignStart="@+id/imgprofile"
            android:layout_alignEnd="@+id/imgprofile"
            android:layout_marginLeft="-100dip"
            android:layout_marginRight="-100dip"

            android:layout_alignBottom="@+id/tvnombre"
            android:layout_below="@+id/headline" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/button38"
            android:layout_marginTop="50dip"
            android:background="@drawable/circle_profile"
            android:layout_alignStart="@+id/imgprofile"
            android:layout_alignEnd="@+id/imgprofile"
            android:layout_marginLeft="-60dip"
            android:layout_marginRight="-60dip"
            android:layout_alignBottom="@+id/imgprofile"
            android:layout_below="@+id/headline" />

        <TextView
            android:id="@+id/headline"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luis Mendoza"
            android:textAlignment="center"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignStart="@+id/button3"
            android:layout_alignEnd="@+id/button3" />

        <TextView
            android:id="@+id/tvnombre"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:gravity="center"
            android:paddingBottom="2.5dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:text="[Username]"
            android:textStyle="bold"

            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_below="@+id/headline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp" />



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgprofile"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="10dip"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_profile_full"
            app:civ_border_width="2dp"
            app:civ_border_color="#424242"
            android:layout_below="@+id/headline"
            android:layout_centerHorizontal="true" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvfrase"
            android:layout_marginBottom="-20dip"
            android:layout_alignParentStart="true"
            android:weightSum="5"
            android:gravity="center|center_vertical|center_horizontal"
            android:id="@+id/linearLayout">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvfrase"
                android:padding="5dip"
                android:layout_marginBottom="10dip"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center|center_vertical|center_horizontal"
                android:id="@+id/linearLayout0">


                <Button
                    android:layout_width="4dp"
                    android:layout_height="10dip"
                    android:layout_marginTop="-10dip"
                    android:background="#FF401A"
                    android:layout_marginLeft="40dip"
                    android:id="@+id/ln1" />

            </RelativeLayout>


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvfrase"
                android:padding="5dip"
                android:layout_marginBottom="10dip"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:gravity="center|center_vertical|center_horizontal"
                android:id="@+id/linearLayout1">

                <View
                    android:layout_width="4dp"
                    android:layout_height="10dip"
                    android:layout_marginTop="-10dip"
                    android:background="#FF401A"
                    android:layout_marginLeft="40dip"
                    android:id="@+id/ln2"
                     />



            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvfrase"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:gravity="center"
            android:paddingBottom="2.5dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5dip"
            android:textColor="#585858"
            android:text="[Userposition]"
            android:textStyle="bold"

            android:shadowColor="@color/grey_font"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"

            android:layout_below="@+id/tvnombre"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lectura del proverbio del día"
        android:id="@+id/textView2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lectura bíblica personal"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <com.beardedhen.androidbootstrap.BootstrapProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:animated="true"
        app:bootstrapBrand="success"
        app:progress="50"
        app:striped="true"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />


    <com.beardedhen.androidbootstrap.BootstrapProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:animated="true"
        app:bootstrapBrand="primary"
        app:progress="10"
        app:striped="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5 / 10"
        android:id="@+id/textView4"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1 / 10"
        android:id="@+id/textView5"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btnchangepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABERNACULO CENTRAL 9:00 AM"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
